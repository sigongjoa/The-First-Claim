# React Frontend Configuration

# Environment
REACT_APP_ENVIRONMENT=development  # development, staging, production
REACT_APP_VERSION=0.1.0

# API Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_API_TIMEOUT=30000

# Sentry Error Tracking
REACT_APP_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
REACT_APP_SENTRY_ENABLED=true
REACT_APP_SENTRY_TRACES_SAMPLE_RATE=0.05
REACT_APP_SENTRY_REPLAY_SAMPLE_RATE=0.1

# Feature Flags
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_ENABLE_SESSION_REPLAY=true
REACT_APP_ENABLE_ERROR_BOUNDARY=true

# Game Configuration
REACT_APP_GAME_TIME_LIMIT=300  # seconds
REACT_APP_MAX_CLAIMS=5
REACT_APP_DIFFICULTY_LEVELS=3

# Analytics (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=

# Build Configuration
GENERATE_SOURCEMAP=false  # Set to true only in development
